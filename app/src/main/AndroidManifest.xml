<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.studytor.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- For Firebase Analytics -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="android.max_aspect"
            android:value="2.1" />

        <activity
            android:name=".activities.ReplacementsMain"
            android:label="@string/app_name"
            android:logo="@mipmap/ic_launcher">

            <!--
  ATTENTION: This intent was auto-generated. Follow instructions at
  https://g.co/AppIndexing/AndroidStudio to publish your URLs.
            -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "http://something.com/something" -->
                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:host="zschocianow.pl" />
                <data android:host="gimchocianow.pl" />
                <data android:pathPrefix="/zastepstwa" />
                <data android:pathPrefix="/plan" />
                <!-- <data -->
                <!-- android:host="[ENTER-YOUR-HTTP-HOST-HERE]" -->
                <!-- android:pathPrefix="/replacementsmain" -->
                <!-- android:scheme="http" /> -->
            </intent-filter>
        </activity>

        <activity
            android:name=".preferences.SettingsActivity"
            android:label="@string/settings"
            android:logo="@mipmap/ic_launcher"
            android:parentActivityName=".activities.ReplacementsMain"
            android:theme="@style/SettingsTheme"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.studytor.app.activities.ReplacementsMain" />
        </activity>

        <activity
            android:name=".activities.ChooseSchool"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:logo="@mipmap/ic_launcher">
            <intent-filter>
                <action android:name="com.studytor.app.activities.ChooseSchool" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.LoaderMain"
            android:label="@string/app_name"
            android:logo="@mipmap/ic_launcher"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.studytor.app.activities.LoaderMain" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service
            android:name=".sync.ProfileRegister"
            android:exported="false" />

        <service
            android:name=".sync.ProfileSetToServer"
            android:exported="false" />

        <service
            android:name=".sync.FcmListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service
            android:name=".sync.InstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <receiver
            android:name=".sync.MainReceiver"
            android:exported="true"> <!-- android:debuggable="true" -->
            <intent-filter>

                <!-- <action android:name="android.net.conn.CONNECTIVITY_CHANGE" /> TODO SHOULD IT BE COMMENT OF SHOULD IT WORKS? -->
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".activities.ActivityMain"
            android:exported="true"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.ActivityInstitutionProfile" android:label="Zespół Szkół Jakichśtam w Warszawie"></activity>

    </application>

</manifest>