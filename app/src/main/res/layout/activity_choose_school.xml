<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_choose_school"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/blue"
    tools:context="com.replacements.replacements.activities.ChooseSchool">

    <TextView
        android:text="Wybierz swoją uczelnię"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMain"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="35dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/school1"
        android:layout_below="@+id/textViewMain"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.7"
            android:background="@color/blue_light"
            app:srcCompat="@drawable/header_image"
            android:id="@+id/imageView1"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>
        <TextView
            android:text="Gimnazjum im. Odkrywców Polskiej Miedzi w Chocianowie"
            android:textColor="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:id="@+id/textView2"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/school2"
        android:layout_below="@+id/school1"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.7"
            android:background="@color/blue_light"
            app:srcCompat="@drawable/header_image"
            android:id="@+id/imageView3"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>
        <TextView
            android:text="Zespół Szkół w Chocianowie"
            android:textColor="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:id="@+id/textView4"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"/>
    </LinearLayout>

</RelativeLayout>
