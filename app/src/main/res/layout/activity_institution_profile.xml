<?xml version="1.0" encoding="utf-8"?>


<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/coordinator_layout"
    app:theme="@style/ActivityInstitutionProfile"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ActivityInstitutionProfile"
        android:background="@color/new_blue_light"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/new_blue_light"
            android:fitsSystemWindows="true"
            app:statusBarScrim="@color/new_blue">

            <ImageView
                android:id="@+id/institution_banner"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:fitsSystemWindows="true"
                android:layout_gravity="top"
                android:scaleType="fitStart"
                android:src="@drawable/header_image_1_c"
                app:layout_collapseMode="parallax"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true">

                <!-- Image Dark Vignette -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/image_buttons_shadow" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="18dp"
                    android:layout_alignParentLeft="true"
                    app:srcCompat="@drawable/activity_institution_back_arrow" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="18dp"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@drawable/activity_institution_subscribe_star" />

            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="top"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:fitsSystemWindows="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/new_blue_light">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/institution_logo"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@color/accent_blue"
                        android:layout_margin="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/institution_name"
                        android:text="Zespół Szkół Jakichśtam w Warszawie"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_toEndOf="@+id/institution_logo"
                        android:layout_toRightOf="@+id/institution_logo"/>

                    <android.support.design.widget.TabLayout
                        android:id="@+id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        app:tabMode="fixed"
                        app:tabGravity="fill"
                        app:tabTextColor="#AFFF"
                        app:tabSelectedTextColor="#FFFF"
                        app:tabIndicatorColor="#FFFF"
                        android:layout_below="@+id/institution_name"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>

            </RelativeLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewpager"
            android:clipToPadding="false">

        </android.support.v4.view.ViewPager>

    </android.support.v4.widget.NestedScrollView>

    <!-- Image Dark Vignette -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/toolbar_dropshadow"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />


</android.support.design.widget.CoordinatorLayout>
