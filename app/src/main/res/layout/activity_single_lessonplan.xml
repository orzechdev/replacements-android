<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_repl"
    tools:context="com.studytor.app.activities.ActivitySingleLessonplan">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/new_blue_light">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/activity_institution_back_arrow"/>

        <com.studytor.app.AutoFitTextView
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:text="Lorem Ipsum Dolot Sit"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"/>

    </android.support.v7.widget.Toolbar>

    <HorizontalScrollView
        android:id="@+id/dayNamesScrollView"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="48dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="4dp">

            <TextView
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Poniedziałek"/>

            <TextView
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="center"
                android:text="Wtorek"/>

            <TextView
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="center"
                android:text="Środa"/>

            <TextView
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="center"
                android:text="Czwartek"/>

            <TextView
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="center"
                android:text="Piątek"/>

        </LinearLayout>

    </HorizontalScrollView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/dayNamesScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:text="1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:text="2"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:text="3"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:text="4"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:text="5"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:text="6"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:text="8:00\n8:45"
                    android:textSize="12sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:text="8:00\n8:45"
                    android:textSize="12sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:text="8:00\n8:45"
                    android:textSize="12sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:text="8:00\n8:45"
                    android:textSize="12sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:text="8:00\n8:45"
                    android:textSize="12sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:text="8:00\n8:45"
                    android:textSize="12sp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:paddingLeft="8dp"
                android:paddingStart="8dp"
                android:orientation="vertical">

                <include layout="@layout/view_single_lessonplan"/>
                <include layout="@layout/view_single_lessonplan"/>
                <include layout="@layout/view_single_lessonplan"/>
                <include layout="@layout/view_single_lessonplan"/>
                <include layout="@layout/view_single_lessonplan"/>
                <include layout="@layout/view_single_lessonplan"/>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <!-- Image Dark Vignette -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/toolbar_dropshadow"
        android:scaleType="centerInside"
        app:layout_constraintTop_toBottomOf="@id/dayNamesScrollView" />


</android.support.constraint.ConstraintLayout>
