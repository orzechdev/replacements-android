    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    card_view:cardCornerRadius="0dp"><!--card_view:cardCornerRadius="4dp"-->
    <RelativeLayout
        android:id="@+id/row_title"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/header"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:clickable="true"
            android:background="@drawable/ripple_recycler_view"

            >
            <TextView
                android:id="@+id/institution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="institution"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="author"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:layout_below="@id/institution"/>
        </RelativeLayout>
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_item_decoration"
            android:layout_below="@id/header"/>
        <RelativeLayout
            android:id="@+id/article_1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:clickable="true"
            android:background="@drawable/ripple_recycler_view">
            <com.studytor.app.helpers.DynamicImageView
                android:id="@+id/a1_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/article_header" />
            <RelativeLayout
                android:id="@+id/article_1_1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_below="@id/a1_header">
                <TextView
                    android:id="@+id/a1_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="a1_title"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/a1_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="a1_text"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_below="@id/a1_title"/>
            </RelativeLayout>
        </RelativeLayout>
