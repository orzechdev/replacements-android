<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="num"
            type="String"/>
        <variable
            name="hours"
            type="String"/>
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="67dp" android:layout_marginBottom="1dp" android:orientation="horizontal" android:background="@android:color/white">

        <TextView
            style="@style/SingleLessonplanLessonNumber"
            android:text="@{num}" />

        <TextView
            style="@style/SingleLessonplanHours"
            android:text="@{hours}"/>

    </LinearLayout>
</layout>