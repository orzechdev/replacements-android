<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/pref_notify"
        android:key="pref_notify">
        <CheckBoxPreference
            android:title="@string/pref_notify_switch"
            android:key="pref_notify_switch"
            android:defaultValue="true"
            android:summaryOn="@string/pref_sync_summ_on"
            android:summaryOff="@string/pref_sync_summ_off"/>
        <ListPreference
            android:title="@string/pref_notify_repl"
            android:key="pref_notify_repl"
            android:dependency="pref_notify_switch"
            android:defaultValue="1"
            android:entries="@array/pref_notify_repl_entries"
            android:entryValues="@array/pref_notify_repl_entryValues" />
