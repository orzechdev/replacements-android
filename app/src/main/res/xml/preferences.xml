    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_author"
        android:key="pref_author_settings">
        <Preference
			android:title="@string/app_author_get"
			android:summary="@string/app_author_info"
			android:key="author_info">
			<intent
				android:action="android.intent.action.VIEW"
				android:data="@string/pref_url_author" />
		</Preference>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Opcje programistyczne"
        android:key="pref_app_dev_settings">
        <EditTextPreference
            android:title="@string/pref_main_file_name"
            android:defaultValue="@string/schedule_main_file"
            android:key="schedule_main_file"
            android:imeOptions="actionDone"/>
        <EditTextPreference
            android:title="@string/pref_fcm_token_title"
            android:summary=""
            android:defaultValue=""
            android:key="pref_fcm_token"
            android:imeOptions="actionDone"/>
    </PreferenceCategory>
</PreferenceScreen>